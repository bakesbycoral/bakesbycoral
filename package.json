{
  "name": "bakes-by-coral",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "deploy": "npx wrangler pages deploy",
    "db:init": "node scripts/init-local-db.js",
    "db:init:seed": "node scripts/init-local-db.js --seed",
    "db:migrate": "npx wrangler d1 execute bakes-coral-db --file=src/lib/db/schema.sql --remote",
    "db:seed:remote": "npx wrangler d1 execute bakes-coral-db --file=src/lib/db/seed.sql --remote"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.14.9",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
