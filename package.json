    "@tiptap/starter-kit": "^3.19.0",
    "date-fns-tz": "^3.2.0",
    "isomorphic-dompurify": "^2.35.0",
    "next": "15.5.9",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "^20.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260117.0",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.6.2",
    "esbuild": "^0.27.2",
    "eslint": "^9",
